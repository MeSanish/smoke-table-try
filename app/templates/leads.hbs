<div class="table-wrapper">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Manual Verified Status</th>
          <th>Created Date</th>
          <th>Modified Date</th>
          <th>Lead Type</th>
          <th>Campaign Name</th>
          <th>Campaign Status</th>
          <th>Primary Email</th>
          <th>Unsubscribed</th>
          <th>Bounce Back</th>
          <th>Delivered</th>
        </tr>
      </thead>
      {{#vertical-collection
       tagName="tbody"
       content=filteredList
       defaultHeight=55
       bufferSize=0.05
       alwaysUseDefaultHeight=true
       containerSelector=".table-wrapper"
       key="id"
       as |lead|
     }}
       <td>{{input value=lead.firstName class="form-control"}}</td>
       <td>{{input value=lead.lastName class="form-control"}}</td>
       <td>{{lead.manualVerifiedStatus}}</td>
       <td>{{lead.createdDate}}</td>
       <td>{{lead.modifiedDate}}</td>
       <td>{{lead.leadType}}</td>
       <td>{{lead.campaignName}}</td>
       <td>{{lead.campaignStatus}}</td>
       <td>{{lead.primaryEmail}}</td>
       <td>{{lead.unsubscribed}}</td>
       <td>{{lead.bouncedback}}</td>
       <td>{{lead.delivered}}</td>
     {{/vertical-collection}}
    </table>
</div>
{{outlet}}
